[user]
  name = "yourname"
  email = youremail

[github]
  user = yourgithubacct

[core]
  editor = vim
  attributesfile = "~/.config/git/attributes"
  excludesfile = "~/.config/git/ignore"

[alias]
  br = branch
  ci = commit
  co = checkout
  logv = log -v --pretty
  ls = ls-files
  p = format-patch HEAD^..HEAD --stdout
  st = status --short --branch
  fixup = "!f() { TARGET=$(git rev-parse "$1"); git commit --fixup=$TARGET ${@:2} && EDITOR=true git rebase -i --autostash --autosquash $TARGET^; }; f"
  merc = merge --no-ff
  please = push --force-with-lease
  stsh = stash --keep-index
  staash = stash --include-untracked
  staaash = stash --all
  touch = "!t() { git commit --amend --no-edit && git push -f; }; t"

[mergetool]
  keepBackup = true

[difftool]
  prompt = false

[diff]
  tool = vimdiff
  algorithm = minimal
  compactionHeuristic = true

[diff "exif"]
  textconv = exiftool

[rerere]
  enabled = 1

[format]
  pretty = oneline

[color]
  ui = true

[push]
  default = simple
