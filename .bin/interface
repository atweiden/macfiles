#!/bin/bash

# ----------------------------------------------------------------------------
# interface: show inet interface
# ----------------------------------------------------------------------------

set -o pipefail

main() {
  networksetup -listallhardwareports 2>/dev/null \
    | sed -n '/Wi-Fi/{n;p}' \
    | awk -F ': ' '{print $2}'
}

main

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
