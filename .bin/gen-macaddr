    '24f677' '7867d7' '5433cb'
  )
  apple_ouis_len="$((${#apple_ouis[@]} - 1))"
  apple_ouis_elem="$(shuf -i0-$apple_ouis_len -n1)"
  apple_oui="${apple_ouis[$apple_ouis_elem]}"
  oui="$(
    awk -F '' '{printf "%s%s:%s%s:%s%s\n", $1, $2, $3, $4, $5, $6}' <<< $apple_oui
  )"
  echo "$oui"
}

# use OUI component from current hardware
gen_oui_hw() {
  local mac_addr_hw
  local oui
  # get hardware MAC address
  mac_addr_hw="$(macaddr)"
  oui=$(
    awk -F : '{printf "%s:%s:%s\n", $1, $2, $3}' <<< "$mac_addr_hw"
  )
  echo "$oui"
}

# generate random MAC address
# credit: https://unix.stackexchange.com/questions/88004/random-mac-address-each-time-at-startup#comment131421_88022
gen_mac_addr_rnd() {
  local gen_mac_addr_rnd
  local mac_addr_rnd
  read -r -d '' gen_mac_addr_rnd <<'EOF'
$hex = <>;
$hex = unpack("H*", $hex);
$hex =~ s/(..)(?!.?$)/$1:/g;
print "$hex\n";
EOF
  # use /dev/urandom to avoid running out of entropy
  mac_addr_rnd="$(
    dd if=/dev/urandom bs=2 count=3 2>/dev/null | perl -e "$gen_mac_addr_rnd"
  )"
  echo "$mac_addr_rnd"
}

# generate random Network Interface Controller (NIC) component
gen_nic_rnd() {
  local mac_addr_rnd
  local nic
  mac_addr_rnd="$(gen_mac_addr_rnd)"
  nic="$(
    awk -F: '{printf "%s:%s:%s\n", $4, $5, $6}' <<< "$mac_addr_rnd"
  )"
  echo "$nic"
}

main() {
  local oui
  local nic
  local mac
  oui="$(gen_oui_apple)"
  #oui="$(gen_oui_hw)"
  nic="$(gen_nic_rnd)"
  mac="$oui:$nic"
  echo "$mac"
}

main

